<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="Word">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>
    
    <style name="Syllabe">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">80sp</item>
        <item name="android:padding">0sp</item>
    </style>

    <style name="TherapyActivityName">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TherapyActivityDescription">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF999999</item>
    </style>
    
</resources>